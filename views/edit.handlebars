<div class="row">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <div class="row d-flex flex-row justify-content-center mb-5">
        <small class="mr-5">*必填欄位</small>
        <div class="h4">請修改你的支出</div>
      </div>

      <div class="d-flex justify-content-center">
        <form action="/expense/{{{record._id}}}/edit?_method=PUT" method="post">
          <div class="form-group row">
            <label for="name" class="col-5 col-sm-4 col-form-label">名稱*:</label>
            <div class="col-7 col-sm-8">
              <input type="text" class="form-control" name="name" id="name" value="{{{record.name}}}">
            </div>
          </div>

          <div class="form-group row">
            <label for="date" class="col-5 col-sm-4 col-form-label">日期*:</label>
            <div class="col-7 col-sm-8">
              <input type="date" class="form-control" name="date" id="date" value="{{{record.date}}}">
            </div>
          </div>

          <div class="form-group row">
            <label for="category" class="col-5 col-sm-4 col-form-label">類別*:</label>
            <div class="col-7 col-sm-8">
              <select name="category" id="category" class="form-control">
                {{#each categoryCh}}
                <option value="{{{this.en}}}" {{#if this.isSelected}}selected disabled{{/if}}>{{{this.ch}}} </option>
                {{/each}}
              </select>
            </div>
          </div>

          <div class="form-group row">
            <label for="amount" class="col-5 col-sm-4 col-form-label">金額*:</label>
            <div class="col-7 col-sm-8">
              <input type="number" class="form-control" name="amount" id="amount" value="{{{record.amount}}}">
            </div>
          </div>

          <button type="submit" class="btn btn-primary btn-block my-3">送出</button>
          <a href="/expense" class="btn btn-secondary btn-block">取消</a>
        </form>
      </div>
    </div>
  </div>
</div>