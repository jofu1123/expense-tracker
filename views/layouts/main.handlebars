      <div>
        <span class="mr-3 text-light">Hi,您好 {{user.name}}</span>
        <a href="/users/logout" class="btn btn-outline-light">Logout</a>
      </div>
      {{else}}
      <div>
        <a href="/users/login" class="btn btn-outline-light">Login</a>
        <a href="/users/register" class="btn btn-outline-light">Register</a>
      </div>

      {{/if}}
    </nav>
  </header>
  <main>
    <div class="container mt-3">
      {{{ body }}}
    </div>
  </main>
